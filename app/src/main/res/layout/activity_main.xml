<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="naimishtrivedi.adsmanager.googleadsmanager.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/mBtnBannerAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banner Ads"/>
        <Button
            android:id="@+id/mBtnNativeBannerAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native Banner Ads"/>

        <Button
            android:id="@+id/mBtnInterstitialAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interstitial Ads"/>

        <Button
            android:id="@+id/mBtnRewardAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Ads"/>

        <Button
            android:id="@+id/mBtnAppOpenAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Open Ads"/>
    </LinearLayout>



</RelativeLayout>